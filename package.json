{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "postinstall": "cd packages/azjs; yarn unlink; yarn link",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^2.4.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.5.3"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  }
}
