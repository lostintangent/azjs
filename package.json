{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "precommit": "lint-staged",
    "publish": "lerna publish",
    "test": "lerna run test"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.0.0",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  }
}
